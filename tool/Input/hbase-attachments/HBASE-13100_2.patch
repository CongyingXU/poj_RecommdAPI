+    #----------------------------------------------------------------------------------------------
+    # Get the split points for the table
+    def _get_splits_internal()
+      splits = @table.getRegionLocations().keys().
+          map{|i| Bytes.toStringBinary(i.getStartKey)}.delete_if{|k| k == ""}
+      puts("Total number of splits = %s" % [splits.size + 1])
+      return splits
+    end
   end
 end
