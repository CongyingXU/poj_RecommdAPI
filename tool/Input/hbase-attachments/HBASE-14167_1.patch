Date: Wed, 18 Nov 2015 21:05:29 -0500
Subject: [PATCH] HBASE-14167 Skip Spark tests when running a build with mvn -DskipIntegrationTests

---
 hbase-spark/pom.xml | 14 ++++++++++++++
 1 file changed, 14 insertions(+)

diff --git a/hbase-spark/pom.xml b/hbase-spark/pom.xml
index ec911bd..e6126c1 100644
--- a/hbase-spark/pom.xml
+++ b/hbase-spark/pom.xml
@@ -599,6 +599,20 @@
 
   <profiles>
     <!-- Skip the tests in this module -->
+    <profile>
+      <id>skipIntegrationTests</id>
+      <activation>
+        <property>
+          <name>skipIntegrationTests</name>
+        </property>
+      </activation>
+      <properties>
+        <skipTests>true</skipTests>
+        <surefire.skipFirstPart>true</surefire.skipFirstPart>
+        <surefire.skipSecondPart>true</surefire.skipSecondPart>
+      </properties>
+    </profile>
+    <!-- Skip the tests in this module -->
       <profile>
         <id>skipSparkTests</id>
             <activation>
