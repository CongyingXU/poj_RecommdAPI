<definitions xmlns="http://schemas.xmlsoap.org/wsdl/" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
             xmlns:http="http://schemas.xmlsoap.org/wsdl/http/" xmlns:xs="http://www.w3.org/2001/XMLSchema"
             xmlns:soapenc="http://schemas.xmlsoap.org/soap/encoding/"
             xmlns:mime="http://schemas.xmlsoap.org/wsdl/mime/" xmlns:types="http://www.example.com/types"
             xmlns:y="http://www.example.com" targetNamespace="http://www.example.com">
    <types></types>
    <message name="requestMessage">
        <part name="part1" type="xs:string"/>
        <part name="part2" type="xs:int"/>
    </message>
    <message name="responseMessage">
        <part name="part1" type="xs:string"/>
    </message>
    <portType name="echoPortType">
        <operation name="echo">
            <input message="y:requestMessage"/>
            <output message="y:responseMessage"/>
        </operation>
    </portType>
    <binding name="echoBinding" type="y:echoPortType">
        <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="echo">
            <soap:operation soapAction="echo"/>
            <input>
                <soap:body use="literal"/>
            </input>
            <output>
                <soap:body use="literal"/>
            </output>
        </operation>
    </binding>
    <service name="serviceName">
        <port binding="y:echoBinding" name="httpPort">
            <soap:address location="http://localhost:8080/axis2/services/echo"/>
        </port>
    </service>
</definitions>
