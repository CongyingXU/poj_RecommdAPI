package org.apache.neethi.util;

import org.apache.axiom.om.OMElement;
import org.apache.neethi.PolicyEngine;
import org.apache.neethi.PolicyOperator;
import org.apache.neethi.PolicyReference;

public class PolicyReaderThread extends Thread {
	   PolicyReference pReference = null;	  
	   PolicyOperator operator = null;
	   public PolicyReaderThread(PolicyReference pReference,			                     
			                     PolicyOperator operator){
		   this.pReference = pReference;		   
		   this.operator = operator;
		   
	   }
	
       public void run(){    	   
       	   OMElement policyElement = pReference.getRefencedPolicyContent(pReference.getURI());                	       	          
       	   operator
       	       .addPolicyComponent(PolicyEngine.getPolicyOperator(policyElement));
       }
}
